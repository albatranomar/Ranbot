generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guild {
  id          String        @id
  prefix      String
  lang        String
  GuildMember GuildMember[]
}

model GuildMember {
  id      Int    @default(autoincrement()) @id
  userID  String
  guildID String
  totalxp Int?
  Guild   Guild  @relation(fields: [guildID], references: [id])
  User    User   @relation(fields: [userID], references: [id])
}

model User {
  id          String        @id
  totalxp     Int
  likes       Int
  coins       Int
  bio         String
  GuildMember GuildMember[]
  UserLevel   UserLevel[]
}

model UserLevel {
  userID  String @id
  current Int
  xp      Int
  levelup Int
  User    User   @relation(fields: [userID], references: [id])
}
